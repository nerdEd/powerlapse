.row-fluid
  .span6
    #container
      %img#current_image

.row-fluid
  .span6
    #slider{:style => 'width: 500px;'}

%ol.images.hidden
  - @snapshots.each do |snapshot|
    %li
      = snapshot.capture_time
      = image_tag(snapshot.snapshot_url)

:javascript
  $(function() {
    var container = $('#container #current_image');
    var images = $('ol.images li img');
    container.attr('src', $(images[0]).attr('src'));
    $('#slider').slider({
      min: 1,
      max: images.size(),
      slide: function(event, ui) {
        container.attr('src', $(images[ui.value]).attr('src'));
      },
      value: 1
    });
  });
